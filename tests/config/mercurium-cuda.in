#!/bin/bash

if [ -z "@NANOX_INCLUDES@" -o "@gpu_valid@" = no ];
then

cat <<EOF
test_ignore=yes
EOF
  
exit

fi

source @abs_builddir@/mercurium-libraries

cat <<EOF
MCC="@abs_top_builddir@/src/driver/mcxx --output-dir=@abs_top_builddir@/tests --profile=mnvcc --config-dir=@abs_top_builddir@/config --verbose"
MCXX="@abs_top_builddir@/src/driver/mcxx --output-dir=@abs_top_builddir@/tests --profile=mnvcxx --config-dir=@abs_top_builddir@/config --verbose"
EOF

if [ ! -z "@NANOX_INCLUDES@" ];
then

# compile_versions="\${compile_versions} nanox_cuda"
cat <<EOF
test_CC_cuda_omp="\${MCC}"
test_CXX_cuda_omp="\${MCXX}"

test_CFLAGS_cuda_omp="--ompss --cuda"
test_CXXFLAGS_cuda_omp="--ompss --cuda"
EOF

fi

cat <<EOF
test_nolink=yes
EOF

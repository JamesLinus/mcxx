#!/usr/bin/env bash

if [ "@NANOX_ENABLED@" = "no" -o "@NANOX_SSE@" = "no" ];
then

cat <<EOF
test_ignore=yes
EOF

exit

fi

if [ "$1" = "svml" -a "@SVML_ENABLED@" != yes ];
then

cat <<EOF
test_ignore=yes
test_ignore_reason="no SVML detected"
EOF

exit

fi

source @abs_builddir@/mercurium-libraries




COMMON_NANOX_CFLAGS=-DNANOX

NANOX_GATE=""
if [ "@NANOS6_ENABLED@" = "yes" ];
then
    NANOX_GATE="--nanox"
fi


if [ "$1" = "svml" ];
then

cat <<EOF
MCC="@abs_top_builddir@/src/driver/plaincxx --output-dir=@abs_top_builddir@/tests --profile=mcc --config-dir=@abs_top_builddir@/config --verbose"
MCXX="@abs_top_builddir@/src/driver/plaincxx --output-dir=@abs_top_builddir@/tests --profile=mcxx --config-dir=@abs_top_builddir@/config --verbose"

compile_versions="\${compile_versions} nanox_mercurium_svml"

test_CC_nanox_mercurium_svml="\${MCC}"
test_CXX_nanox_mercurium_svml="\${MCXX}"

test_CFLAGS_nanox_mercurium_svml="-O0 --simd --debug-flags=vectorization_verbose --openmp --svml --fast-math  -std=gnu99 ${COMMON_NANOX_CFLAGS} ${NANOX_GATE}"
test_CXXFLAGS_nanox_mercurium_svml="-O0 --simd --debug-flags=vectorization_verbose --openmp --svml --fast-math ${COMMON_NANOX_CFLAGS} ${NANOX_GATE}"
test_LDFLAGS_nanox_mercurium_svml="@abs_top_builddir@/lib/perish.o"

EOF

else

cat <<EOF
MCC="@abs_top_builddir@/src/driver/plaincxx --output-dir=@abs_top_builddir@/tests --profile=mcc --config-dir=@abs_top_builddir@/config --verbose"
MCXX="@abs_top_builddir@/src/driver/plaincxx --output-dir=@abs_top_builddir@/tests --profile=mcxx --config-dir=@abs_top_builddir@/config --verbose"

compile_versions="\${compile_versions} nanox_mercurium"

test_CC_nanox_mercurium="\${MCC}"
test_CXX_nanox_mercurium="\${MCXX}"

test_CFLAGS_nanox_mercurium="-O0 --simd --debug-flags=vectorization_verbose --openmp -std=gnu99 ${COMMON_NANOX_CFLAGS} ${NANOX_GATE}"
test_CXXFLAGS_nanox_mercurium="-O0 --simd --debug-flags=vectorization_verbose --openmp ${COMMON_NANOX_CFLAGS} ${NANOX_GATE}"
test_LDFLAGS_nanox_mercurium="@abs_top_builddir@/lib/perish.o"

EOF

fi

if [ ! -z "@ICC@" ];
then

if [ "$1" = "svml" ]; then

cat <<EOF

IMCC="@abs_top_builddir@/src/driver/plaincxx --output-dir=@abs_top_builddir@/tests --profile=imcc --config-dir=@abs_top_builddir@/config --verbose"
compile_versions="\${compile_versions} nanox_imcc_svml"
test_CC_nanox_imcc_svml="\${IMCC}"

test_CFLAGS_nanox_imcc_svml="-O0 --simd --debug-flags=vectorization_verbose --openmp --svml --fast-math -std=gnu99  --enable-ms-builtins ${COMMON_NANOX_CFLAGS} ${NANOX_GATE}"
test_CXXFLAGS_nanox_imcc_svml="-O0 --simd --debug-flags=vectorization_verbose --openmp --svml --fast-math -std=gnu99  --enable-ms-builtins ${COMMON_NANOX_CFLAGS} ${NANOX_GATE}"
test_LDFLAGS_nanox_imcc_svml="@abs_top_builddir@/lib/perish.o"

EOF

else

cat <<EOF

IMCC="@abs_top_builddir@/src/driver/plaincxx --output-dir=@abs_top_builddir@/tests --profile=imcc --config-dir=@abs_top_builddir@/config --verbose"
compile_versions="\${compile_versions} nanox_imcc_svml"

test_CFLAGS_nanox_imcc="-O0 --simd --debug-flags=vectorization_verbose --openmp -std=gnu99 --Wn,-no-fast-transcendentals,-fp-model,precise --enable-ms-builtins ${COMMON_NANOX_CFLAGS} ${NANOX_GATE}"
test_CXXFLAGS_nanox_imcc="-O0 --simd --debug-flags=vectorization_verbose --openmp -std=gnu99 --Wn,-no-fast-transcendentals,-fp-model,precise --enable-ms-builtins ${COMMON_NANOX_CFLAGS} ${NANOX_GATE}"
test_LDFLAGS_nanox_imcc="@abs_top_builddir@/lib/perish.o"

EOF

fi

fi

cat <<EOF
exec_versions="1thread"

test_ENV_1thread="OMP_NUM_THREADS='1'"
EOF

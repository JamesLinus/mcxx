#!/bin/bash

if [ "@ENABLE_SUPERSCALAR@" = "no" ];
then

cat <<EOF
test_ignore=yes
EOF

fi

cat <<EOF
SS_LIBS=
EOF

CACHE_SS_LIBRARIES_LT="@abs_builddir@/ss-libraries-libtool"

if [ ! -e ${CACHE_SS_LIBRARIES_LT} -a -e "@abs_top_builddir@/config/config.superscalar" ];
then

grep -o "compiler_phase\s*=\s*[^# ]*" @abs_top_builddir@/config/config.superscalar | sed -e 's/compiler_phase\s*=\(.*\).so\s*/\1.la/g' | sort -u | xargs -I{} find @abs_top_builddir@ -iname "{}" -not -path "*/.libs/*" | sed -e 's/^.*$/SS_LIBS="${SS_LIBS} -dlopen &"/g' > ${CACHE_SS_LIBRARIES_LT}

fi

if [ -e ${CACHE_SS_LIBRARIES_LT} ];
then

cat ${CACHE_SS_LIBRARIES_LT}

fi

cat <<EOF
MCC="@abs_top_builddir@/libtool --mode=execute \${SS_LIBS} @abs_top_builddir@/src/driver/mcxx --output-dir=@abs_top_builddir@/tests --profile=smpss-cc --config-file=@abs_top_builddir@/config/config.superscalar --verbose"

test_CC="\${MCC}"

test_CFLAGS=

test_nolink=yes
EOF

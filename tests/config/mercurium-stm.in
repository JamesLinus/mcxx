#!/bin/bash

# Ignore this test if no STM

if [ -z "@NEBELUNG_INCLUDES@" ];
then

cat  <<EOF
test_ignore=yes
EOF

fi

cat <<EOF
STM_LIBS=
EOF

CACHE_STM_LIBRARIES_LT="@abs_builddir@/stm-libraries-libtool"

if [ ! -e ${CACHE_STM_LIBRARIES_LT} -a -e "@abs_top_builddir@/config/config.stm_nebelung" ];
then

grep -o "compiler_phase[[:blank:]]*=[[:blank:]]*[^# ]*" @abs_top_builddir@/config/config.stm_nebelung | sed -e 's/compiler_phase[[:blank:]]*=\(.*\).so[[:blank:]]*/\1.la/g' | sort -u | xargs -I{} find @abs_top_builddir@ -iname "{}" -not -path "*/.libs/*" | sed -e 's/^.*$/STM_LIBS="${STM_LIBS} -dlopen &"/g' > ${CACHE_STM_LIBRARIES_LT}

fi

if [ -e ${CACHE_STM_LIBRARIES_LT} ];
then

cat ${CACHE_STM_LIBRARIES_LT}

fi

cat <<EOF
MCC="@abs_top_builddir@/libtool --mode=execute \${STM_LIBS} @abs_top_builddir@/src/driver/mcxx --output-dir=@abs_top_builddir@/tests --profile=stmcxx --config-file=@abs_top_builddir@/config/config.stm_nebelung --verbose"

test_CXX="\${MCC}"

test_CXXFLAGS=

test_nolink=yes
EOF

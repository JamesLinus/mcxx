#!/bin/bash

cat <<EOF
STM_LIBS=
EOF

CACHE_STM_LIBRARIES_LT="@abs_builddir@/stm-libraries-libtool"

if [ ! -e ${CACHE_STM_LIBRARIES_LT} ];
then

grep -o "compiler_phase\s*=\s*[^# ]*" @abs_top_builddir@/config/config.stm_nebelung | sed -e 's/compiler_phase\s*=\(.*\).so\s*/\1.la/g' | sort -u | xargs -I{} find @abs_top_builddir@ -iname "{}" -not -path "*/.libs/*" | sed -e 's/^.*$/STM_LIBS="${STM_LIBS} -dlopen &"/g' > ${CACHE_STM_LIBRARIES_LT}

fi

cat ${CACHE_STM_LIBRARIES_LT}

cat <<EOF
MCC="@abs_top_builddir@/libtool --mode=execute \${STM_LIBS} @abs_top_builddir@/src/driver/mcxx --output-dir=@abs_top_builddir@/tests --profile=stmcxx --config-file=@abs_top_builddir@/config/config.stm_nebelung --verbose"

test_CXX="\${MCC}"

test_CXXFLAGS=

test_nolink=yes
EOF

[ ! -z "$TEST_SOURCE" ] && NAME=$(basename $TEST_SOURCE)

case "$NAME" in
    success*)
      ;;
    failure*)
      echo "test_compile_fail=yes"
      ;;
    *)
      ;;
esac

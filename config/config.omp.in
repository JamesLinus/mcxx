# OpenMP + Nanos 
[omp-base]
options =
{debug} options = -g
{instrument,!debug} options = --variable=instrument:1
preprocessor_name = gcc
preprocessor_options = -E
{instrument,!debug} preprocessor_options = -I@MINTAKA_INCLUDES@ -include mintaka.h
compiler_name = gcc
compiler_options = 
linker_name = gcc
{openmp} compiler_phase = libtlomp-core.so
# nanos4
{openmp,!nanox} preprocessor_options = -I@NANOS4_INCLUDES@ -D_OPENMP=200505 -include nth_mcc.h
{openmp,!nanox} linker_options = -L@NANOS4_LIBS@ -Wl,-rpath,@NANOS4_LIBS@
{openmp,!nanox,!nanos-dev,!debug,!instrument} linker_options = -lnthreads-pfm 
{openmp,!nanox,nanos-dev,!debug,!instrument} linker_options = -lnthreads-dev 
{openmp,!nanox,instrument,!debug} linker_options = -lnthreads-prv -L @MINTAKA_LIBS@ -Wl,-rpath,@MINTAKA_LIBS@ -lmintaka
{openmp,!nanox,debug} linker_options = -g -lnthreads-dbg
{openmp,!nanox} pragma_prefix = nanos
{openmp,!nanox} compiler_phase = libtlnanos4.so
{openmp,!nanox,instrument,!debug} @INSTRUMENTATION_PHASE@
{openmp,!nanox,serialize} compiler_phase = libtlomp-serialize.so
{openmp,!nanox,serialize} compiler_phase = libtlomp-core.so  # Rerun core after serialization
{openmp,!nanox} compiler_phase = libtlomp-nanos4.so
# nanos++
{openmp,nanox} preprocessor_options = -I@NANOX_INCLUDES@ -D_OPENMP=200805 -include nanos.h
{openmp,nanox} linker_options = -L@NANOX_LIBS@ -Wl,-rpath,@NANOX_LIBS@
{openmp,nanox} linker_options = -lnanox-c -lnanox-omp
{openmp,nanox,fun-tasks} compiler_phase = libtlomp-fun-tasks.so 
{openmp,nanox,fun-tasks} compiler_phase = libtlomp-core.so # Run again omp-core after fun-tasks
{openmp,nanox} compiler_phase = libtlomp-nanox.so
{openmp,nanox} compiler_phase = libtlnanox-smp.so

[mcc : omp-base]
language = C

[mcxx : omp-base]
language = C++
{openmp} preprocessor_options = -include new 
compiler_name = g++
linker_name = g++

[imcc : mcc]
preprocessor_name = icc
compiler_name = icc
linker_name = icc

[imcxx : mcxx]
preprocessor_name = icpc
compiler_name = icpc
linker_name = icpc


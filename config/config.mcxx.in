# This file controls how external programs are handled
# For C
[mcc]
language = C
options =
preprocessor_name = gcc
preprocessor_options = -E @MCXX_INCLUDES@
compiler_name = gcc
compiler_options = 
linker_name = gcc
linker_options = @MCXX_LIBS@
@INSTRUMENTATION_PHASE@
compiler_phase = libtlomp.so

# For C++
[mcxx]
language = C++
options = 
preprocessor_name = g++
preprocessor_options = -E -include new @MCXX_INCLUDES@
compiler_name = g++
compiler_options = 
linker_name = g++
linker_options = @MCXX_LIBS@
@INSTRUMENTATION_PHASE@
compiler_phase = libtlomp.so

# For C and icc
[imcc]
language = C
options =
preprocessor_name = icc
preprocessor_options = -E  @MCXX_INCLUDES@
compiler_name = icc
compiler_options =
linker_name = icc
linker_options = @MCXX_LIBS@
@INSTRUMENTATION_PHASE@
compiler_phase = libtlomp.so

[acotescc]
language = C
options =
preprocessor_name = gcc
preprocessor_options = -E -include pthread.h -I @prefix@/include -include mintaka.h -include acolib.h
compiler_name = gcc
compiler_options =  -g -ggdb3  
linker_name = gcc
linker_options = -L @prefix@/lib -l acolib -l pthread -l mintaka -g -ggdb3
compiler_phase = libtlacotes.so
pragma_prefix = acotes

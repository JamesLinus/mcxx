[smpcc : omp-base]
language = C
options = -std=gnu99 
options = --vector-flavor=gnu 
{simd} compiler_options = -flax-vector-conversions
{ffast-math} compiler_options = -ffast-math

[smpcxx : omp-base]
language = C++
{openmp} preprocessor_options = -include new 
options = --vector-flavor=gnu 
{simd} compiler_options = -flax-vector-conversions
preprocessor_name = @G++@
compiler_name = @G++@
linker_name = @G++@
{ffast-math} compiler_options = -ffast-math

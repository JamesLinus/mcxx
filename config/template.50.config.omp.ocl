# OpenCL profile
[oclmcc : omp-base ]
language = C
options = --opencl
preprocessor_options = -include nanos-opencl.h -D_MERCURIUM_OPENCL_
compiler_phase = libtlnanox-opencl.so
linker_options = -lnanox-opencl-api

[oclmcxx : omp-base]
language = C++
options = --opencl
preprocessor_options = -include nanos-opencl.h -D_MERCURIUM_OPENCL_
compiler_phase = libtlnanox-opencl.so
linker_options = -lnanox-opencl-api